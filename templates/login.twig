{% extends "skeleton.twig" %}
        {% block body %}
            <h1>Guest WiFi</h1>
            <div>{% if loginMsg == "" %}{{lang.enter_email}}{% else %}{{ loginMsg }}{% endif %}</div>
            
            <form method='post' action='/'>
            <input type='hidden' name='id' value='{{values.id}}' />
            <input type='hidden' name='ap' value='{{values.ap}}' />
            <input type='hidden' name='url' value='{{values.url}}' />
            <input type='hidden' name='site' value='{{values.site}}' />
            <input type='hidden' name='csrf' value='{{values.csrf}}' />
            <input type='hidden' name='page' value='login' />
            
            <input name='email' type='email' class='email' placeholder='example@domain.com' >
            <input type='submit' value='{{lang.login}}' class='button'>
            </form>
        {% endblock %}
